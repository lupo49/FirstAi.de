<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background" 
    >
    
<TextView  
	android:id="@+id/Informationsleiste"
	style="@android:style/TextAppearance.Large"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:gravity="center"
    android:padding="5px"
    android:text="@string/Informationsleiste"
    android:textStyle="bold"
    android:textColor="#FF000000"
    android:layout_marginBottom="0px"
    />
    
<TextView 
	android:layout_width="wrap_content" 
	android:id="@+id/textView1" 
	android:text="@string/underline" 
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	/>
    
<TextView
	style="@style/MenuUnselected"
	android:id="@+id/HaftungHinweise"
	android:text="@string/HaftungHinweise"
	/>
    
<TextView
	style="@style/MenuUnselected"
	android:id="@+id/NotrufeWeltweit"
	android:text="@string/NotrufeWeltweit"
	/>

<TextView
	style="@style/MenuUnselected"
	android:id="@+id/Allgemeines"
	android:text="@string/Allgemeines"
	/>

<TextView
	style="@style/MenuUnselected"
	android:id="@+id/AllergischeReaktion"
	android:text="@string/AllergischeReaktion"
	/>
	
</LinearLayout>
